{{! Primary upload button }}
<div class="btn-group" role="group" aria-label="Upload">
  <button type="button" class="btn btn-box dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><span class="octicon octicon-cloud-upload"></span> Upload</button>
  <div class="dropdown-menu">
    <a {{action "openFilePicker"}} class="dropdown-item" href="#"><span class="octicon octicon-file-text"></span> Files</a>
    <a {{action "openDirectoryPicker"}} class="dropdown-item" href="#"><span class="octicon octicon-file-submodule"></span> Folders</a>
    <div class="input-wrapper">
      <input type="file" id="file" name="picture[image]" style="display:none" multiple onchange={{action 'handleFiles'}}>
      <input type="file" id="directory" name="picture[image]" style="display:none" multiple onchange={{action 'handleFiles'}} webkitdirectory="true">
    </div>
  </div>
</div>

<div class="btn-group" role="group" aria-label="First group">
  <button type="button" class="btn btn-box-default"><span class="octicon octicon-plus"></span> New</button>
</div>

<div class="btn-group" role="group" aria-label="First group">
  <button id="note" type="button" class="btn btn-box-default"><span class="octicon octicon-pencil"></span></button>
</div>

<div class="btn-group pull-xs-right" role="group" aria-label="Third group">
  <div class="checkbox">
    <label class="m-t-xs">
      <input type="checkbox">
    </label>
  </div>
</div>

<div class="btn-group pull-xs-right" role="group" aria-label="Third group">
  <button type="button" class="btn btn-box-default"><span class="octicon octicon-unfold"></span></button>
</div>

{{#if showUploadDialog}}
  {{#liquid-tether
    to="modal-dialog"
    target="document.body"
    targetModifier="visible"
    attachment="top center"
    targetAttachment="top center"
    offset="-120px -20px"
    tetherClass="modal-dialog"
    overlayClass="modal-backdrop"
    on-overlay-click="onUploadComplete"}}

      {{upload-form
        selectedFiles=selectedFiles
        on-upload-complete="onUploadComplete"}}

  {{/liquid-tether}}
{{/if}}
